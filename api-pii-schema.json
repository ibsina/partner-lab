
{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
      "id": {
        "type": "integer",
        "description": "Unique identifier for the user"
      },
      "name": {
        "type": "string",
        "description": "Full name of the user"
      },
      "email": {
        "type": "string",
        "format": "email",
        "description": "Email address of the user"
      },
      "password": {
        "type": "string",
        "description": "Password for the user account"
      },
      "creditcard": {
        "type": "string",
        "description": "Credit card number in the format XXXX-XXXX-XXXX-XXXX"
      },
      "passport": {
        "type": "string",
        "description": "Passport number"
      }
    },
    "required": ["id", "name","email","password", "creditcard"]
}
 